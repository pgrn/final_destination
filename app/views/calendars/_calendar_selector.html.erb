<%= simple_form_for @space, url: space_calendars_path, method: :get,
  wrapper_mappings: {
    check_boxes:    :vertical_collection,
    radio_buttons:  :vertical_collection,
    file:           :custom_file,
    boolean:        :custom_boolean_switch
  } do |f| %>
  <%= f.association :calendars, include_blank: false, include_hidden: false, as: :check_boxes, checked: @currently_selected %>
  <%= f.button :submit, "Select calendars", class: "btn-sm btn-outline-primary" %>
<% end %>